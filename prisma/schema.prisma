// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int    @unique @default(autoincrement())
  username String
  password String
  todo     Todo[]
}

model Todo {
  id     Int    @unique @default(autoincrement())
  name   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
}
